<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="volcano-image">
            <img src="{{details.image}}">
        </div>

        <div class="volcano-info">
            <div class="volcano-text">
                <h1 id="name">{{details.name}}</h1>
                <h3 id="location">Location: {{details.location}}</h3>
                <p id="type">Volcano Type: {{details.typeVolcano}}</p>
                <p id="elevation"><span>{{details.elevation}}</span></p>
                <p id="last-eruption">{{details.lastEruption}}</p>
                <p id="votes">Vote's Count: {{counter}}</p>
                <p id="description">{{details.description}}</p>
            </div>

            {{#if isAuthenticated}}
            <div class="product-btn">
                {{#if isOwner}}
                <div class="author">
                    <a href="/details/{{details._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/details/{{details._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isVoted}}
                <a href="/details/{{details._id}}/vote" class="btn-vote">Vote</a>
                {{else}}
                <p class="vote-message">You've already voted for this volcano!</p>
                {{/if}}
                {{/if}}
            </div>
            {{/if }}
        </div>
    </section>
</main>