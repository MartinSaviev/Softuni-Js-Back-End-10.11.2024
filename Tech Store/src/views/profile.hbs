<section class="profile-hero">
    <div class="container">
        <h2>User Profile</h2>
        <p>Welcome back, <strong id="email">{{user.email}}</strong></p>
    </div>
</section>

<section class="created-laptops">
    <div class="container">
        <h3>Created Laptops</h3>
        <div class="laptop-list">
            {{#if userDevices}}
            {{#each userDevices}}
            <div class="laptop-item">
                <img src="{{image}}" alt="Laptop">
                <p><strong>Brand:</strong> {{brand}}</p>
                <p><strong>Model:</strong> {{model}}</p>
                <a href="/details/{{_id}}" class="btn">View Details</a>
            </div>
            {{/each}}
            {{else}}

            <p class="no-post">You haven't created a post yet</p>
            {{/if}}
        </div>
    </div>
</section>
<section class="preferred-laptops">
    <div class="container">
        <h3>Preferred Laptops</h3>
        <div class="laptop-list">
            {{#if preferLaptops}}
            {{#each preferLaptops}}
            <div class="laptop-item">
                <img src="{{image}}"
                    alt="Laptop">
                <p><strong>Brand:</strong> Acer</p>
                <p><strong>Model:</strong> Nitro 5 AN515-58</p>
                <a href="/details/{{_id}}" class="btn">View Details</a>
            </div>
            {{/each}}
            {{else}}
            <p class="no-post">You haven't preferred any devices yet</p>
            {{/if}}
        </div>
    </div>
</section>