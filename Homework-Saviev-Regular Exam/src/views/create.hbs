<form class="planet-form" method="POST">
    <label for="name">Name of Planet:</label>
    <input type="text" id="name" name="name" value="{{body.name}}">

    <label for="age">Age (in billion years):</label>
    <input type="number" id="age" name="age" value="{{body.age}}">

    <label for="solarSystem">Solar System:</label>
    <input type="text" id="solarSystem" name="solarSystem" value="{{body.solarSystem}}">

    <label for="type">Type:</label>
    <select name="type" id="type">
        <option value="---" selected>---</option>
        {{#each typeSelected}}
        <option value="{{typePlanet}}" {{selected}}>
            {{label}}</option>
        {{/each}}
    </select>

    <label for="moons">Moons (count):</label>
    <input type="number" id="moons" name="moons" value="{{body.moons}}">

    <label for="size">Size (in km):</label>
    <input type="number" id="size" name="size" value="{{body.size}}">

    <label for="rings">Rings:</label>
    <select id="rings" name="rings">
        <option value="---" selected>---</option>
        {{#each typeRings}}
        <option value="{{typeRings}}" {{selected}}>
            {{label}}</option>
        {{/each}}
    </select>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="4">{{body.description}}</textarea>

    <label for="image">Image URL:</label>
    <input type="url" id="image" name="image" value="{{body.image}}">

    <button type="submit">Add Planet</button>
</form>